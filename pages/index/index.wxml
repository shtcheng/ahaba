<!--index.wxml-->
<view class="container">
  <!--注册-->
  <view wx:if="{{showBind}}">
    <view style="flex-direction:row;">
      <input bindinput="getPhone" val placeholder="请输入手机号码" auto-focus />
      <button disabled="{{disabledGetCode}}" bindtap="getCode">{{codeButtText}}</button>    
    </view>
    <view>
      <input bindinput="checkCode" placeholder="验证码"/>
    </view>
  </view>

  <!--注册协议-->
  <view wx:if="{{showProto}}">
    <text>注册协议</text>
    <button bindtap="confirmProto">接受</button>
  </view>

  <!--首页-->
  <view wx:if="{{showIndex}}">
    <text>首页</text>
  </view>
</view>    
