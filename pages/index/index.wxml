<!--index.wxml-->
<view class="container">
  <!--注册-->
  <view wx:if="{{showBind}}">
    <view>
      <input bindinput="getPhone" val placeholder="输入手机号" auto-focus />          
    </view>
    <view>
      <input disabled="{{disabledInputCode}}" bindinput="inputCode" placeholder="验证码"/>
      <button disabled="{{disabledGetCode}}" bindtap="getCode">{{codeButtText}}</button>
    </view>
    <view>
      <button bindtap="submit">提交</button>
    </view>
  </view>

  <!--注册协议-->
  <view wx:if="{{showProto}}">
    <text>{{userAgreement}}</text>
    <button bindtap="confirmProto">接受</button>
  </view>

  <!--首页-->
  <view wx:if="{{showIndex}}">
    <text>首页</text>
  </view>
</view>    
