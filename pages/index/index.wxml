<!--index.wxml-->
<loading hidden="{{hidden}}" >
    加载中...
</loading>
<view hidden="{{hiddenIndex}}" class="index">
  <!--跳转到用户中心-->  
  <view class="index_view_user">
    <view class="index_view_user_time" bindtap="goToRegister">{{nowDate}}</view>
    <image src="../../image/user.png" class="index_view_user_user" bindtap="goToUserCenter"/>
  </view>

  <!--商品列表-->  
  <view wx:for="{{ticketList}}" wx:for-item="ticket" wx:key="id" class="index_view_for">
    <view style="display: flex; width=100%">
       <!--价格-->
       <view style="background:{{ticket.colorPrice}}; height:110px;width:20%">
        <view class="index_view_price">￥{{ticket.money}}</view>
      </view>
      <!--名称-->
      <view style="background:{{ticket.colorInfo}};height:110px;width:70%">
        <view class="index_view_info_name">{{ticket.name}}({{ticket.type}})</view>
        <view class="index_view_info_time">{{ticket.bgTime}}至{{ticket.endTime}}</view>
      </view>
      <!--增加-->
      <view style="background:{{ticket.colorAdd}};height:110px;width:10%">
        <image src="../../image/icon_plus_alt2.png" class="index_view_info_add"/>
      </view>
    </view>    
  </view>

  <view style="height:150px">
  </view>
  <view class="index_footer">
    <view class="index_footer_head">
      <view class="index_footer_head_1">已选门票</view>
      <view class="index_footer_head_2">清空</view>
    </view>    
    <button bindtap="goToPay" style="float:left;">去结算</button>
  </view>
</view>
