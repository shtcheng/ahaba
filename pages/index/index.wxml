<!--index.wxml-->
<loading hidden="{{hidden}}" bindchange="loadingChange">
    加载中...
</loading> 

<scroll-view scroll-y="true" style="height: 100%;" bindscrolltolower="loadMore" bindscrolltoupper="refesh"> 
  <view wx:if="{{hasRefesh}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">	  
    <icon type="waiting" size="45"/><text>刷新中...</text>
  </view>
  <view wx:else  style="display:none" ><text></text></view>

    <view class="container">
      <!--注册-->
      <view wx:if="{{showBind}}">
        <view>
          <input bindinput="getPhone" val placeholder="输入手机号" auto-focus />          
        </view>
        <view>
          <input disabled="{{disabledInputCode}}" bindinput="inputCode" placeholder="验证码"/>
          <button disabled="{{disabledGetCode}}" bindtap="getCode">{{codeButtText}}</button>
        </view>
        <view>
          <button bindtap="submit">提交</button>
        </view>
      </view>

      <!--注册协议-->
      <view wx:if="{{showProto}}">
        <text>{{userAgreement}}</text>
        <button bindtap="confirmProto">接受</button>
      </view>

      <!--首页-->
      <view wx:if="{{showIndex}}">
        <view wx:for="{{}}"></view>>
      </view>
    </view>    

  <view class="tips1">
    <view wx:if="{{hasMore}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">
      <icon type="waiting" size="45"/><text>玩命的加载中...</text>
    </view>
    <view wx:else><text></text></view>
  </view>	
</scroll-view>