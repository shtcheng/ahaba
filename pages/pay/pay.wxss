/**pay.wxss**/
.paybody {
  width: 90%;
  border-radius:5px 5px 5px 5px;
  margin:0 auto; 
  background: #EFF3F2;
}

.pay_head{
  width: 100%;
  height: 80px; 
}
.pay_head_1{
  width: 100%;
  height: 30px;
  font-size: 15pt;
  margin-left: 15%;
}
.pay_head_2{
  width: 100%;
  font-size: 11pt;
  color:#999;
  margin-left: 15%;
}

.pay_info{
  width: 100%;  
}
.pay_info_info{
  width: 100%;
  display: flex;
  height: 90px;
  border-bottom:1px solid #D7D8DA
}
.pay_info_name{
  margin: 30px;
  width: 70%;
  font-size:17pt;
  margin-left: 15%
}
.pay_info_pricenum{
  width: 30%;
  margin: 20px;  
}
.pay_info_price{
  font-size:17pt;
  color: #D87973
}
.pay_info_number{
  margin: 10px;
  margin-left: 50%;
}

.pay_tail{
  display: flex;
  width: 100%;
}
.pay_tail_hidden{
  visibility:hidden;
  height: 60px;
  width: 80%
}
.pay_tail_total{
  margin: 20px;
  color: #D87973;
  font-size:17pt;
  width: 20%
}
