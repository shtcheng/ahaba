
<!--account.wxml-->
<view style="margin-top: 30px">
  <view class="chargeinfo">
  <view style="font-size:16pt; color:#aaaaaa;margin-left:10%;width:80%" >{{phonenumber}}</view>
  <view style="width:20%"></view>
  <image src="../../image/user.png" style="width:32px; height:32px;"></image>
  </view>

  <view >
  <view style="background:#aaaaaa; width:90%; height:1px;margin-left:5%;margin-right:5%"></view>
  </view>

    <view style="margin-top: 20px;"></view>

    <view class="chargelabel" style="margin-left:5%;color:#525e6f">选择充值金额：</view>
    <view style="margin-top: 20px;"/>

    <view style="margin-top: 20px;"/>
    <view class="register_code">
      <label class="register_code_lable">输入充值金额：</label>
      <input bindinput="moneyinput"type="number" maxlength="6" confirm-type="done" class="register_code_input" value="{{moneyvalue}}"></input> 
    </view>

    <view style="margin-top: 20px;"/>
    <view class="chargeinfo">
      <image bindtap="num50" style="height:40px; width:90px;margin-top:0px"src="../../image/num50.png"/>
      <view style="width:20px"></view>
      <image bindtap="num100" style="height:40px; width:90px;margin-top:0px"src="../../image/num100.png"/>
      <view style="width:20px"></view>
      <image bindtap="num200" style="height:40px; width:90px;margin-top:0px"src="../../image/num200.png"/>    
    </view>

    <view style="width: 100%;margin:0 auto;bottom:80rpx;position:fixed; ">
    <button class="charge_butt" style="background:#5d9cec;color:white" bindtap="chargesubmit">确定</button>
    </view>

</view>

