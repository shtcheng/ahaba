
<!--account.wxml-->
<view class="content">
  <view class="chargeinfo">
  <view style="font-size:16pt; color:#aaaaaa;margin-left:5%" >{{phonenumber}}</view>
  <view style="margin-right:5%;width:30%"></view>
  <image src="../../image/user.png" style="width:32px; height:32px;margin-right:5%"></image>
  </view>

  <view class="chargeinfo">
  <view style="background:#aaaaaa; width:90%; height:1px;margin-left:5%;margin-right:5%"></view>
  </view>

    <view style="margin-top: 20px;"></view>

    <view class="chargelabel" style="margin-left:5%">选择充值金额：</view>
    <view style="margin-top: 20px;"/>
    <view class="chargeinfo">
      <!--减号➖按钮-->
      <view style=" margin-left:20%">
      <image bindtap="chargeMinus" style="height:45px; width:45px;margin-top:4px"src="../../image/minus.png" />
      </view>
      <view style="background:#eff3f2;height:45px; width:50%;text-align:center;line-height:50px;color:#da5c5d;font-size:20pt">{{money}}</view>
      <!--加号➕按钮-->
      <view style=" margin-right:20%">
      <image bindtap="chargeAdd" style="height:45px; width:45px;margin-top:4px"src="../../image/add.png"/>
      </view>
    </view>
    
    <view style="width: 100%;margin:0 auto;bottom:80rpx;position:fixed; ">
    <button class="charge_butt" style="background:#5d9cec;color:white" bindtap="chargesubmit">确定</button>
    </view>

</view>

